
" Loaded after .vimrc, so anything in here will override the .vimrc settings

" User preferences
" -----------------------------------------------------------------------------


" User plugin configurations
" -----------------------------------------------------------------------------
let g:yankring_history_dir=$HOME.'/.vim/tmp/yankring/'
" let g:MarkdownPreviewUserStyles=$HOME.'/path/to/user/styles/'
let g:RefreshRunningBrowserDefault = 'safari'
let g:snips_author = 'Ramiro Rikkert'


" User key mapping
" -----------------------------------------------------------------------------
" <F1>-<F8> are reserved for .vimrc


" User leader mapping
" -----------------------------------------------------------------------------
nnoremap <leader>n :NERDTreeToggle<cr>
nnoremap <leader>g :GundoToggle<cr>
" Open split window
nnoremap <leader>w <C-w>v<C-w>l
" strip all trailing whitespace in the current file
nnoremap <leader>W :%s/\s\+$//<cr>:let @/=''<CR>
" reselect the text that was just pasted
nnoremap <leader>v V`]
" open markdown preview
nnoremap <leader>mp :MDP<CR>

" User file type utility settings
" -----------------------------------------------------------------------------


" -----------------------------------------------------------------------------
"  No more arrow keys!
nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>
nnoremap j gj
nnoremap k gk
"  Autosave
au FocusLost * :wa


" User themes and GUI settings
" -----------------------------------------------------------------------------
colorscheme darkburn


" User GUI specific settings (could be in .gvimrc.local)
" -----------------------------------------------------------------------------
if has('gui_running')
  set guifont=MesloLGMDZ:h12
  " if has('gui_macvim')
  " set transparency=5
  " end
endif
